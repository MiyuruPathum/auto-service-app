{
  "name": "auto-service-app",
  "version": "1.1.0",
  "description": "Peugeot Workshop Management System",
  "main": "src/main/main.js",
  "scripts": {
    "postinstall": "node scripts/download-libs.js",
    "start": "electron .",
    "dev": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win"
  },
  "keywords": [
    "workshop",
    "peugeot",
    "management"
  ],
  "author": "Workshop Pro",
  "license": "ISC",
  "type": "commonjs",
  "build": {
    "appId": "com.workshop.peugeot",
    "productName": "Workshop Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json",
      "build/logo.png"
    ],
    "extraResources": [
      {
        "from": "uploads",
        "to": "uploads",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build/logo.png",
        "to": "logo.png"
      },
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "WorkshopPro-Portable-${version}.exe"
    }
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "tailwindcss": "^4.1.18"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "express": "^4.18.2",
    "sqlite3": "^5.1.7"
  }
}
